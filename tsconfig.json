{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "allowJs": true,
    "target": "es2020",
    "outDir": "build",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "rootDir": "./",
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"],
}
